#!/bin/sh

me=$0
[ -L $me ] && me=$(readlink $me)

box_cmd=$1
box_root=$(dirname $me)/..
box_tasks=$box_root/tasks
box_lib=$box_root/lib
box_etc=$box_root/etc
IFS= box_hosts=$(cat $box_etc/hosts)
box_par=parallel

export box_cmd box_root box_tasks box_lib box_etc box_hosts box_par

IFS= exec $box_tasks/$box_cmd "$@"
